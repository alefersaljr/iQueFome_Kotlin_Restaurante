<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
            android:state_checked="true">

        <shape
                android:shape="rectangle">

            <solid
                    android:color="#e3cdb1"/>

            <size
                    android:width="50sp"
                    android:height="22sp"/>

            <corners
                    android:radius="40sp"/>

            <stroke
                    android:width="2sp"
                    android:color="#816e54"/>

        </shape>
    </item>

    <item
            android:state_checked="false">

        <shape
                android:shape="rectangle">

            <solid
                    android:color="#e3cdb1"/>

            <size
                    android:width="50sp"
                    android:height="22sp"/>

            <corners
                    android:radius="40sp"/>

            <stroke
                    android:width="2sp"
                    android:color="#b19c81"/>

        </shape>
    </item>

</selector>