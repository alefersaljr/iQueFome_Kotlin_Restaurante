<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RestauranteOperadorDetalhesReserva"
        android:background="@android:color/white">

    <TextView
            android:id="@+id/reserva_TextView_Cadastro"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:paddingTop="13sp"
            android:text="Reserva Recebida"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/text_color_dark"/>

    <View
            android:layout_width="250sp"
            android:layout_height="4sp"
            android:layout_marginTop="5sp"
            android:layout_centerHorizontal="true"
            android:background="@color/text_color_dark"
            android:layout_below="@+id/reserva_Toolbar"/>

    <include
            android:id="@+id/reserva_Toolbar"
            layout="@layout/layout_toolbar"/>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="20sp"
                    android:layout_marginTop="80sp">

        <LinearLayout
                android:id="@+id/reserva_Prato_Image_and_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <TextView
                        android:id="@+id/reserva_Cliente_Field_Nome_Cliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="Nome do Cliente: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_color"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                <TextView
                        android:id="@+id/reserva_Cliente_Data_Nome_Cliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="Nome"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="@color/text_color_light"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                <TextView
                        android:id="@+id/reserva_Cliente_Data_Sobrenome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text=" Sobrenome"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="@color/text_color_light"
                        android:maxLines="1"
                        android:ellipsize="end"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <TextView
                        android:id="@+id/reserva_Cliente_Field_Nome_Prato"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="Nome do Prato: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_color"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                <TextView
                        android:id="@+id/reserva_Cliente_Data_Nome_Prato"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="Nome Prato"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="@color/text_color_light"
                        android:maxLines="1"
                        android:ellipsize="end"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <TextView
                        android:id="@+id/reserva_Cliente_Field_Preco_Prato"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="Preço do Prato: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_color"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                <TextView
                        android:id="@+id/reserva_Cliente_Data_Preco_Prato"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="Preço do Prato"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="@color/text_color_light"
                        android:maxLines="1"
                        android:ellipsize="end"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <TextView
                        android:id="@+id/reserva_Cliente_Field_Hora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="Hora da Reserva: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_color"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                <TextView
                        android:id="@+id/reserva_Cliente_Data_Hora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="22:30"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="@color/text_color_light"
                        android:maxLines="1"
                        android:ellipsize="end"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <TextView
                        android:id="@+id/reserva_Cliente_Field_Pontuacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="Pontuação do Cliente: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_color"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                <TextView
                        android:id="@+id/reserva_Cliente_Numero_Pontuacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="10"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="@color/text_color_light"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                <TextView
                        android:id="@+id/reserva_Cliente_pts_Pontuacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="pts"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="@color/text_color_light"
                        android:maxLines="1"
                        android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>


        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/reserva_Prato_Image_and_Name">

            <LinearLayout
                    android:id="@+id/reserva_Descricao_Acompanhamentos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20sp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_button_default">

                    <TextView
                            android:id="@+id/reserva_alteracao_Field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:text="Alterações Solicitadas"
                            android:gravity="start"
                            android:textColor="@color/text_color"/>

                    <TextView
                            android:id="@+id/reserva_alteracao_Data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:text="Nenhuma"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:textColor="@color/text_color_light"/>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/reserva_ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#77BDBDBD"
            android:visibility="gone">

        <ProgressBar
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/reserva_Button_Excluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:borderWidth="0sp"
            android:backgroundTint="@color/text_color_dark"
            android:src="@drawable/icon_delete"
            android:layout_margin="16dp"
            app:fabSize="auto"/>

</RelativeLayout>