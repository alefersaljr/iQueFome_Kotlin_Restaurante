<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_Prato"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="@drawable/round_button_default">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/item_reserva_field_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Hora da Reserva: "
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            <TextView
                    android:id="@+id/item_reserva_data_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="22:30"
                    android:textColor="@color/text_color_light"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:maxLines="1"
                    android:ellipsize="end"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/item_reserva_field_nome_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Nome do Cliente: "
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/item_reserva_data_nome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Alexandre"
                        android:textColor="@color/text_color_light"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                <TextView
                        android:id="@+id/item_reserva_data_sobrenome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:hint="22:30"
                        android:textColor="@color/text_color_light"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:maxLines="1"
                        android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>